{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "bank_ref": {
      "type": "string",
      "unique": true
    },
    "amount": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "mode": {
      "type": "enumeration",
      "enum": [
        "debit_card",
        "credit_card",
        "UPI",
        "EMI",
        "amex",
        "international_card",
        "corporate_card"
      ],
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "success",
        "pending",
        "failure"
      ],
      "default": "pending",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "payment_date": {
      "type": "date"
    },
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order",
      "inversedBy": "payment"
    }
  }
}
